<Window x:Class="Uppgift2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift2"
        mc:Ignorable="d"
        Title="Miniräknare" Width="280" Height="400" Background="#EEE">
    
    <StackPanel Margin="10">
        <Label FontSize="25">Miniräknare</Label>

        <Label>Tal 1</Label>
        <TextBox Name="rutaTal1" Margin="5" Height="20"
        TextWrapping="Wrap" />
        <Label>Tal 2</Label>
        <TextBox Name="rutaTal2" Margin="5" Height="20" />

        <DockPanel HorizontalAlignment="Stretch" >
            <Button Click="ClickPlus" Margin="5" Width="50" Height="50">+</Button>
            <Button Click="ClickMinus" Margin="5" Width="50" Height="50">-</Button>
            <Button Click="ClickGånger" Margin="5" Width="50" Height="50">*</Button>
            <Button Click="ClickDividera" Margin="5" Width="50" Height="50">/</Button>
        </DockPanel>

        <Label>Resultat</Label>
        <TextBox Name="rutaResultat" Margin="5" Height="50" AcceptsReturn="True" IsReadOnly="True" FontStyle="italic"
        TextWrapping="Wrap" />
    </StackPanel>
</Window>
