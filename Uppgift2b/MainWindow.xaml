<Window x:Class="Uppgift2b.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift2b"
        mc:Ignorable="d"
        Title="Enkel miniräknare" Width="300" Height="380"
        Background="#EEE">
    
    <StackPanel Margin="10">
        <Label FontSize="25">Enkel miniräknare</Label>

        <Label>Ange tal1</Label>
        <TextBox Name="rutaTal1" Margin="5" Height="20" />
        <Label>Ange tal2</Label>
        <TextBox Name="rutaTal2" Margin="5" Height="20" />

        <DockPanel HorizontalAlignment="Stretch" >
            <Button Click="ClickPlus" Margin="5" Width="50" Height="50">+</Button>
            <Button Click="ClickMinus" Margin="5" Width="50" Height="50">-</Button>
            <Button Click="ClickGånger" Margin="5" Width="50" Height="50">*</Button>
            <Button Click="ClickDividera" Margin="5" Width="50" Height="50">/</Button>
        </DockPanel>

        <Label>Resultat</Label>
        <TextBox Name="rutaResultat" Margin="5" Height="20" AcceptsReturn="True" 
        IsReadOnly="True" FontStyle="italic" />

    </StackPanel>
</Window>

