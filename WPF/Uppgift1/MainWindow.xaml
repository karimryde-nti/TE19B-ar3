<Window x:Class="Uppgift1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift1"
        mc:Ignorable="d"
        Title="Ceasarkrypto" Width="300" Height="400" Background="#EEE">
    
    <StackPanel Margin="10">
        <Label FontSize="25">Ceasarkrypto</Label>

        <Label>Ange en text</Label>
        <TextBox Name="rutaText" Margin="5" Height="50"
        TextWrapping="Wrap" />
        <Label>Ange nyckel</Label>
        <TextBox Name="rutaNyckel" Margin="5" Height="20" />

        <Button Click="ClickKör" Margin="5">Kör</Button>

        <Label>Krypterad text</Label>
        <TextBox Name="rutaKrypterad" Margin="5" Height="50" AcceptsReturn="True" IsReadOnly="True" FontStyle="italic"
        TextWrapping="Wrap" />
    </StackPanel>
</Window>