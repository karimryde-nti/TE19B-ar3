<Window x:Class="Uppgift6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift6"
        mc:Ignorable="d"
        Title="Löpande medelvärde" Width="300" Height="250"
        Background="#EEE">
    
    <StackPanel Margin="10">
        <Label FontSize="25">Löpande medelvärde</Label>
        <DockPanel HorizontalAlignment="Stretch" >
            <Label>Ange tal</Label>
            <TextBox Name="talRuta" Margin="5" Height="20" />
        </DockPanel>
        
        <Button Name="knappOK" Click="knappAdderaClick" Margin="5" Height="30" >Addera</Button>

        <DockPanel HorizontalAlignment="Stretch" >
            <Label Width="100">Summa</Label>
            <TextBox Name="summaRuta" Margin="5" Height="20" AcceptsReturn="True" IsReadOnly="True" FontStyle="italic" />
        </DockPanel>
        <DockPanel HorizontalAlignment="Stretch" >
            <Label Width="100">Medelvärdet</Label>
            <TextBox Name="medelRuta" Margin="5" Height="20" AcceptsReturn="True" IsReadOnly="True" FontStyle="italic" />
        </DockPanel>
        
    </StackPanel>
</Window>
