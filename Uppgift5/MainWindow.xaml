<Window x:Class="Uppgift5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uppgift5"
        mc:Ignorable="d"
        Title="Läsa en textfil" Height="450" Width="400">
    <StackPanel Margin="10">
        <Label>Läsa en textfil</Label>

        <Button Click="ClickÖppnaDialogruta">Välj fil</Button>

        <TextBox Name="resultatRuta" Margin="5" Height="150" Background="#FFF" 
        FontStyle="italic" TextWrapping="WrapWithOverflow" 
        VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" />
    </StackPanel>
</Window>
